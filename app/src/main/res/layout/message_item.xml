<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="1dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_item_friend_logo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="6dp"
        android:src="@drawable/default_personal_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="6dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/message_item_friend_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="沐风"
            android:textColor="#5B595A"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/message_item_friend_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="1小时前"
            android:textColor="#989898"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/message_item_friend_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="从前有座山，山里有座庙，庙里有个老"
        android:textColor="#989898"
        android:textSize="15sp" />
</LinearLayout>