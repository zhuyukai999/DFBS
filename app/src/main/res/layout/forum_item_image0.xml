<?xml version="1.0" encoding="utf-8"?><!--晚点用wrap_content替换110dp-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/forum_item_image0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@android:color/holo_blue_dark"
    android:dividerHeight="1dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/profilePhoto_forum_item_image0"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:divider="#F44336"
        android:dividerHeight="2dp"
        android:orientation="vertical"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/username_forum_item_image0"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/publish_time_forum_item_image0"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="23dp"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/forum_item_report_image0"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:adjustViewBounds="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/show_forumItem_main_text_forum_item_image0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/forum_item_collect_image0"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:adjustViewBounds="true" />

                <ImageView
                    android:id="@+id/forum_item_comment_image0"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:adjustViewBounds="true" />

                <TextView
                    android:id="@+id/forum_item_comment_num_image0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/forum_item_good_image0"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:adjustViewBounds="true" />

                <TextView
                    android:id="@+id/forum_item_good_num_image0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>