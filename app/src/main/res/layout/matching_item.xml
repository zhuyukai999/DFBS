<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/matching_item_logo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="6dp"
        android:src="@drawable/default_personal_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="6dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/matching_item_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp"
            android:text="沐风"
            android:textColor="#5B595A"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/matching_item_ball_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp"
            android:text="乒乓球"
            android:textColor="#5B595A"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/matching_item_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="加入"
        android:textSize="16dp"/>

</LinearLayout>