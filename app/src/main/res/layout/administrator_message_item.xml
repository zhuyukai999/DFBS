<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/administrator_comment_item_logo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/default_personal_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/administrator_comment_item_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李华"
                android:textColor="#5B595A"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/administrator_comment_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="1小时前"
                android:textColor="#989898"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/administrator_comment_item_report"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/report_icon_1"
            android:layout_margin="10dp"
            android:padding="5dp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/administrator_comment_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:text="从前有座山，山里有座庙，庙里有个老和尚"
        android:textColor="#484848"
        android:textSize="18dp" />
</LinearLayout>